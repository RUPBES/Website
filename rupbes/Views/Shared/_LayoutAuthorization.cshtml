<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <link rel="canonical" href="https://rupbes.by/" />
    <title>'БЕЛЭНЕРГОСТРОЙ' ХОЛДИНГ</title>
    <link href="@BotDetect.Web.CaptchaUrls.Absolute.LayoutStyleSheetUrl"
          rel="stylesheet" type="text/css" />
    <link href="~/Scripts/respond.js" type="text/javascript" />
    <link href="~/Content/Styles/main.css" rel="stylesheet" />    
</head>
<body class="theme_funky">
    <style>
        .header {            
            padding: 10px; /* Отступы внутри header */
            text-align: left; /* Выравнивание текста по левому краю */
        }

        .home a {
            text-decoration: none; /* Убрать подчеркивание у ссылки */
            color: #fff; /* Белый цвет текста для контраста с синим фоном */
            font-size: 16px; /* Размер шрифта */
            padding: 8px 16px; /* Внутренние отступы для ссылки */
            border: 2px solid #fff; /* Белая рамка вокруг ссылки */
            border-radius: 8px; /* Закругленные углы рамки */
            display: inline-block; /* Чтобы рамка оборачивала текст */
            transition: background-color 0.3s, color 0.3s; /* Плавный переход при наведении */
        }

            .home a:hover {
                background-color: #fff; /* Белый фон при наведении */
                color: #007bff; /* Синий текст при наведении */
            }
    </style>
    <div class="full-screen">
        <div class="top-screen">
            <header class="header">
                <div class="home">
                    <a href="/">Домашняя страница</a>
                </div>
            </header>
        </div>
        <div class="container">
            @RenderBody()
        </div>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/scripts/jquery-1.10.2.js")
    @Scripts.Render("~/scripts/jquery.unobtrusive-ajax.js")    
    @RenderSection("scripts", required: false)
</body>
</html> 